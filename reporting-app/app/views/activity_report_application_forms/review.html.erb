<% content_for :title, t(".title") %>

<h1>Review and submit</h1>

<div class="usa-section margin-top-4 padding-0">
  <%= render partial: 'activity_report_application_forms/activity_report_application_form', locals: { activity_report_application_form: @activity_report_application_form } %>
</div>

<%= flex_form_with(model: @activity_report_application_form, url: submit_activity_report_application_form_path(@activity_report_application_form), method: :post) do |f| %>
  <%= f.submit "Submit report" %>
<% end %>
