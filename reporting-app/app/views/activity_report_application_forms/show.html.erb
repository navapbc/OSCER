<%= render template: "flex/application_forms/show", locals: {
  title: t(".title"),
  back_link_text: t(".back"),
  index_path: activity_report_application_forms_path,
  created_at: @activity_report_application_form.created_at.strftime("%B %d, %Y at %I:%M %p"),
  current_status: @activity_report_application_form.status,
  next_step: t(".next_step.status.#{@activity_report_application_form.status}"),
  submitted_on_text: t(".submitted_on")
} %>

<% if policy(@activity_report_application_form).edit? %>
  <%= link_to t(".edit"),
              edit_activity_report_application_form_path(
                @activity_report_application_form,
                reporting_source: "reporting_app"
              ),
              class: "usa-button usa-button--outline" %>
<% else %>
  <%= button_tag t(".edit"), class: "usa-button usa-button--outline", type: "button", disabled: true %>
<% end %>
