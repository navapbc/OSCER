<%= render partial: "application/breadcrumbs", locals: { crumbs: [
  { name: t("certifications.index.title"), url: certifications_path },
  ], current_name: @certification.id  } %>
<% content_for :title, t(".title") %>
<h1><%= t(".title") %></h1>
<%= render "form", certification_form: @certification, submit_text: t(".submit") %>
<h2><%= t(".activity_reports.header") %></h2>
<table class="usa-table usa-table--borderless width-full">
  <thead>
    <tr>
      <th scope="col">
        <%= t(".activity_reports.col_activity_report_id") %>
      </th>
      <th scope="col">
        <%= t(".activity_reports.col_cases") %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% for activity_report in @certification.activity_report_application_forms do %>
      <tr>
        <td>
          <%= link_to activity_report.id, certification_activity_report_application_form_path(certification, activity_report) %>
        </td>
        <td>
          1
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
