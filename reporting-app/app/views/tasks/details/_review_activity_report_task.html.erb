<% # TODO move rendering of flash to a shared layout %>
<%= render partial: 'application/flash' %>
<%= render partial: 'activity_report_application_forms/activity_report_application_form', locals: { activity_report_application_form: application_form } %>
<% if task.pending? %>
  <%= flex_form_with(model: task) do |f| %>
    <%= f.submit "Approve", value: "approve", class: "usa-button--outline" %>
    <%= f.submit "Deny", value: "deny", class: "usa-button--outline" %>
  <% end %>
<% end %>
