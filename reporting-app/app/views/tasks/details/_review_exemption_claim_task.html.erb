<%= render partial: 'application/flash' %>
<%= render partial: 'exemption_application_forms/exemption_application_form', locals: { exemption_application_form: application_form } %>
<% if task.pending? %>
  <%= flex_form_with(model: task) do |f| %>
    <%= f.submit t("tasks.details.approve_button"), class: "usa-button--outline" %>
    <%= f.submit t("tasks.details.deny_button"), class: "usa-button--outline" %>
  <% end %>
<% end %>
