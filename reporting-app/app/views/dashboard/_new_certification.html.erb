<div class="grid-row grid-gap">
  <div class="grid-col-6">
    <div class="border-2px padding-2">
      <h2>Report Activities</h2>
      <p class="font-serif-md">
        Report your activities for the current reporting period.
      </p>
      <% if activity_report&.in_progress? %>
        <p class="font-serif-md">
          <strong>Report Status</strong><br />
          You have an activity report in progress.
        </p>
        <%= link_to "Continue report", edit_activity_report_application_form_path(activity_report), class: "usa-button" %>
      <% else %>
        <%= link_to "Report activities", new_activity_report_application_form_path, class: "usa-button" %>
      <% end %>
    </div>
  </div>
  <div class="grid-col-6">
    <div class="border-2px padding-2">
      <h2>Apply for an exemption</h2>
      <p class="font-serif-md">
        If you have certain conditions, you may not need to report activities.
      </p>
      <% if exemption_application&.in_progress? %>
        <p class="font-serif-md">
          <strong>Exemption status</strong><br />
          You have an exemption request in progress.
        </p>
        <%= link_to "Continue request", edit_exemption_application_form_path(exemption_application), class: "usa-button" %>
      <% else %>
        <%= link_to "Request exemption", new_exemption_application_form_path, class: "usa-button usa-button--outline" %>
      <% end %>
    </div>
  </div>
</div>