<% if documents.any? %>
  <ul class="usa-alert__text usa-list margin-top-1">
    <% documents.each do |document| %>
      <li class="usa-list-item">
        <%= link_to("#{document.filename}", document.blob, target: "_blank") %> <small><em>(<%= document.created_at.strftime("%m/%d/%y %I:%M %p %Z") %>)</em></small>
      </li>
    <% end %>
  </ul>
<% else %>
  <div style="padding: unset;" class="usa-alert usa-alert--info usa-alert--slim  usa-alert--no-icon" role="status">
    <div class="usa-alert__body">
      <p class="usa-alert__text">No documents available</p>
    </div>
  </div>
<% end %>
