<% content_for :title, t(".title") %>

<%= link_to t(".back"), certification_activity_report_application_form_path(@certification, @activity_report_application_form) %>

<h1><%= t(".title.work", name: @activity.name) %></h1>

<%= render @activity %>

<ul class="usa-button-group margin-top-4">
  <li class="usa-button-group__item">
    <%= link_to t(".edit"), edit_certification_activity_report_application_form_activity_path(@certification, @activity_report_application_form, @activity), class: class_names("usa-button") %>
  </li>
  <li class="usa-button-group__item">
    <%= strata_form_with(model: [@certification, @activity_report_application_form, @activity], method: :delete, html: { class: "display-inline-block" }) do |f| %>
      <%= f.submit t(".destroy"), class: "usa-button--outline" %>
    <% end %>
  </li>
</ul>

