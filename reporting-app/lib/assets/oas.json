          "member_id",
          "created_at",
          "updated_at"
        ],
        "example": {
          "id": "63680317-0e33-40a7-8e1a-249a2f5855d9",
          "member_id": "123",
          "case_number": "C-111",
          "certification_requirements": {
            "certification_date": "2025-09-26",
            "months_that_can_be_certified": [
              "2025-07-01",
              "2025-08-01",
              "2025-09-01"
            ],
            "number_of_months_to_certify": 1,
            "due_date": "2025-10-26",
            "params": {
              "lookback_period": 3,
              "number_of_months_to_certify": 1,
              "due_period_days": 30
            }
          },
          "member_data": {
            "contact": {
              "email": "john@doe.com",
              "phone": "+123456789"
            }
          },
          "created_at": "1970-01-01T00:00:00.000Z",
          "updated_at": "1970-01-01T00:00:00.000Z"
        }
      },
      "ErrorResponseBody": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "status"
        ],
        "example": {
          "status": 400
        }
      }
    }
  }
}
